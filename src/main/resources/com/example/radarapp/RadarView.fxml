<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox/>
    <AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.radarapp.RadarController">
        <children>
            <Circle fx:id="radarCircle" centerX="300.0" centerY="250.0" radius="200.0" stroke="GREEN" strokeType="INSIDE" strokeWidth="2.0" />
            <Line fx:id="radarBeam" stroke="#800001" strokeWidth="2.0" />


            <Label fx:id="statusLabel" text="Radar tidak aktif" />
            <Button text="Start">
                <onAction>#handleStartButton</onAction>
            </Button>
            <Button text="Stop">
                <onAction>#handleStopButton</onAction>
            </Button>
        </children>
    </AnchorPane>